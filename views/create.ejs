<%- include('partials/header.ejs') %>
<div class="min-vh-100">

    <div >
        <div class="row justify-content-center">

    <% if (locals.postId) {  %>
        <div class="content col-12 col-xxl-8 col-xl-8 px-4">
            <form action="/update" method="post">
                <input class="form-control dark-form my-4" type="text" name="title" placeholder="Title" value="<%= title %>" required>
                <textarea class="form-control dark-form" name="content" id="content" cols="30" rows="18" placeholder="Content" style="resize: none;"><%= content %>"</textarea>
                <input hidden type="text" name="index" value="<%= postId %>">
                <div class="text-start m-1 ">
                    <input class="btn btn-light fs-5 btn-lg my-4 button-rad buttonBackground" type="submit" value="Update Post">
                </div>
            </form>
        </div>
    <% } else {  %>
        <div class="content col-12 col-xxl-8 col-xl-8 px-4">
            <form action="/save" method="post">
                <input class="form-control dark-form my-4" type="text" name="title" placeholder="Title" required>
                <textarea class="form-control dark-form" name="content" id="content" cols="30" rows="18" placeholder="Content" style="resize: none;"></textarea>
                <div class="text-start m-1 ">
                    <input class="btn btn-light fs-5 btn-lg my-4 button-rad buttonBackground" type="submit" value="Create Post">
                </div>
            </form>
        </div>
        
    <% }  %>
        </div>
    </div>

</div>


<%- include("partials/footer.ejs") %>